<s:TagVisualization x:Class="ActivityDesk.Visualizer.Visualizations.SmartPhone"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    Loaded="SmartPhone_Loaded">
    <Grid>
        <WrapPanel HorizontalAlignment="Stretch">
            <Ellipse x:Name="Glow" 
           Width="350" 
           Height="350" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="Black" Offset="0" />
                        <GradientStop Color="#CDAA0909" Offset="1" />
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <s:SurfaceButton Name="PinButton" Height="38" Click="PinButton_Click">
                <Rectangle Fill="Black" />
            </s:SurfaceButton>
        </WrapPanel>
    </Grid>
</s:TagVisualization>
